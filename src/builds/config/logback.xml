<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE logback>
<configuration>

    <property name="PRJ_NAME" value="@mvn.project.name@" />
    <property name="LOG_DIR" value="@mvn.log.dir@" />
    <property name="LOG_FORMAT" value="[%d{yyyy/MM/dd HH:mm:ss.SSS}][%-5level][%thread] %class - %msg%n" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>${LOG_FORMAT}</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${PRJ_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${PRJ_NAME}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>@mvn.log.max.history@</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>${LOG_FORMAT}</pattern>
        </encoder>
    </appender>

    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${PRJ_NAME}-error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${PRJ_NAME}-error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>@mvn.log.max.history@</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>${LOG_FORMAT}</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <appender name="SQL_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${PRJ_NAME}_sql.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${PRJ_NAME}-sql.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>@mvn.log.max.history@</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>${LOG_FORMAT}</pattern>
        </encoder>
    </appender>

    <logger name="maint.mapper" additivity="false" level="@sql.log.level@">
        @sql.log.appender.ref@
    </logger>

    <!-- ログ出力に関する設定 -->
    <root level="@log.level@">
        @log.appender.ref@
    </root>

</configuration>
